# Production Environment Variables
NODE_ENV=production
PORT=5000

# Database Configuration (Update with production values)
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=stars_corporate_prod
DB_USER=your-db-user
DB_PASSWORD=your-secure-db-password

# JWT Configuration (Generate strong secret)
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Socket.IO Configuration (Update with production domain)
SOCKET_CORS_ORIGIN=https://your-domain.com

# Frontend URL (Update with production domain)
FRONTEND_URL=https://your-domain.com

# Email Configuration (Add your email service)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Security
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000

# SSL
SSL_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Analytics
ANALYTICS_ENABLED=true